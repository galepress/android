<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_row_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="0dp"
    >

    <ImageView
        android:id="@+id/coverImage"
        android:layout_width="110dp"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:src="@drawable/sample1"
        android:background="@color/text_pressed"

        >
    </ImageView>

    <TextView
        android:id="@+id/nameLabel"
        android:text="Lorem Ipsum Şüöığ Adfadsf Ifasole ödemkinler."
        android:layout_height="20dp"
        android:layout_width="220dp"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:editable="false"
        android:typeface="normal"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:ellipsize="end"
        android:minLines="1"
        android:maxLines="1"

        />

    <TextView
        android:id="@+id/monthLabel"
        android:text="Adem Karakollu."
        android:layout_height="20dp"
        android:layout_width="220dp"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@+id/nameLabel"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:editable="false"
        android:textColor="@color/text_color"
        android:typeface="normal"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/detailLabel"
        android:text="Adem Karakollu."
        android:layout_height="20dp"
        android:layout_width="220dp"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@+id/monthLabel"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:editable="false"
        android:typeface="normal"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_height="10dp"
        android:layout_width="220dp"
        android:layout_below="@+id/detailLabel"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/progress_label"
        android:text="1Mb / 10Mb"
        android:layout_height="20dp"
        android:layout_width="220dp"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@+id/progress_bar"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:editable="false"
        android:typeface="normal"
        android:textColor="@color/text_color"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        />

    <Button
        android:id="@+id/update_button"
        android:layout_height="30dp"
        android:layout_width="108dp"
        android:text="Update"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@id/progress_label"
        android:padding="0dp"
        android:layout_margin="2dp"
        android:typeface="normal"
        android:textSize="14sp"
        android:maxLines="1"
        android:background="@color/text_border_pressed"
        android:textColor="@color/text_color"
        />

    <Button
        android:id="@+id/cancel_button"
        android:layout_height="30dp"
        android:layout_width="108dp"
        android:text="Cancel"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@id/update_button"
        android:padding="0dp"
        android:layout_margin="2dp"
        android:typeface="normal"
        android:textSize="14sp"
        android:maxLines="1"
        android:background="@color/text_border_pressed"
        android:textColor="@color/text_color"
        />
    <Button
        android:id="@+id/view_button"
        android:layout_height="30dp"
        android:layout_width="108dp"
        android:text="View"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@id/update_button"
        android:padding="0dp"
        android:layout_margin="2dp"
        android:typeface="normal"
        android:textSize="14sp"
        android:maxLines="1"
        android:background="@color/text_border_pressed"
        android:textColor="@color/text_color"
        />
    <Button
        android:id="@+id/download_button"
        android:layout_height="30dp"
        android:layout_width="108dp"
        android:text="Download"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@id/update_button"
        android:padding="0dp"
        android:layout_margin="2dp"
        android:typeface="normal"
        android:textSize="14sp"
        android:maxLines="1"
        android:background="@color/text_border_pressed"
        android:textColor="@color/text_color"
        />

    <Button
        android:id="@+id/delete_button"
        android:layout_height="30dp"
        android:layout_width="108dp"
        android:text="Delete"
        android:layout_toRightOf="@+id/download_button"
        android:layout_below="@id/update_button"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:layout_margin="2dp"
        android:typeface="normal"
        android:textSize="14sp"
        android:maxLines="1"
        android:background="@color/text_border_pressed"
        android:textColor="@color/text_color"
        />


</RelativeLayout>