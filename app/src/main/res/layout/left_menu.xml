<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_menu_layout"
    android:layout_width="@dimen/left_menu_size"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/menu_bg" />

        <ImageView
            android:id="@+id/left_menu_app_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_logo_height"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/left_menu_logo" />

        <RelativeLayout
            android:id="@+id/left_menu_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_category_item_size"
            android:layout_below="@+id/left_menu_app_icon"
            android:layout_marginBottom="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/left_menu_login_signup" />

                <TextView
                    android:id="@+id/left_menu_login_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:lines="1"
                    android:text="@string/login_stand"
                    android:textSize="@dimen/menu_category_text_size" />

            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_below="@+id/left_menu_login"
            android:background="#80FFFFFF"
            android:layout_height="0.40dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/left_menu_login"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:id="@+id/left_categories_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/left_menu_category_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp"
                        android:adjustViewBounds="true"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/left_menu_category_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_toLeftOf="@+id/left_menu_categories_close"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|left"
                        android:text="@string/KATEGORILER"
                        android:textSize="@dimen/left_menu_title_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/left_menu_categories_close"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="35dp"
                        android:adjustViewBounds="true" />

                </RelativeLayout>


                <ListView
                    android:id="@+id/left_menu_category_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:visibility="visible">

                </ListView>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</LinearLayout>
