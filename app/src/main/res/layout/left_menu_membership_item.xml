<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/left_menu_list_item_size"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:gravity="center_vertical|left"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">


    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:id="@+id/membership_icon"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/membership_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/left_menu_text_size"
        android:singleLine="true"
        android:text="abcşŞöÖçÇıIğĞ"
        android:gravity="center_vertical|left"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/social_icon"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:padding="0dp"
        android:layout_marginTop="-1dp" />

</LinearLayout>