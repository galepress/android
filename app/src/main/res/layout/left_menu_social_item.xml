<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/left_menu_list_item_size"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:gravity="center_vertical|left"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">

    <TextView
        android:id="@+id/social_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/left_menu_text_size"
        android:singleLine="true"
        android:text="fgdffdgdfg"
        android:gravity="center_vertical|left"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/social_icon"
        android:layout_centerVertical="true" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/social_icon"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp" />

</RelativeLayout>

