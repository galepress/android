<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_row_content"
    android:layout_width="165dp"
    android:descendantFocusability="blocksDescendants"
    android:padding="0dp"
    android:gravity="center"
    android:layout_height="220dp">

    <RelativeLayout
        android:layout_width="165dp"
        android:orientation="vertical"
        android:layout_height="220dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/cover_image_layout"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
            />

            <ak.detaysoft.graff.util.CustomPulseProgress
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/grid_image_loading"
                android:visibility="visible"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="false" />
        </RelativeLayout>

        <LinearLayout
            android:id = "@+id/detailLayout"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/nameLabel"
                android:text=""
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="@android:color/darker_gray"
                android:textSize="13dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center" />

        </LinearLayout>

        <ImageView
            android:id="@+id/grid_download_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66FFFFFF"/>

        <RelativeLayout
            android:id="@+id/grid_download_status"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/grid_download_selector"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/grid_download_percentage"
                android:text="%0"
                android:textSize="18dp"
                android:lines="1"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/grid_download_cancel"
                android:layout_marginLeft="20dp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/grid_download_cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/grid_download_cancel"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>