<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_row_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="0dp"
    >

    <ImageView
        android:id="@+id/coverImage"
        android:layout_width="150dp"
        android:layout_height="198dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"

        />

    <TextView
        android:id="@+id/nameLabel"
        android:text=""
        android:layout_height="20dp"
        android:layout_width="200dp"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:editable="false"
        android:typeface="normal"
        android:textColor="@color/text_color_white"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:ellipsize="end"
        android:minLines="1"
        android:maxLines="1"

        />

    <TextView
        android:id="@+id/monthLabel"
        android:text=""
        android:layout_height="20dp"
        android:layout_width="200dp"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@+id/nameLabel"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:editable="false"
        android:textColor="@color/text_color_white"
        android:typeface="normal"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/detailLabel"
        android:text=""
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@+id/monthLabel"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:editable="false"
        android:typeface="normal"
        android:textColor="@color/text_color_white"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_height="10dp"
        android:layout_width="100dp"
        android:layout_below="@+id/detailLabel"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/detailLabel"
        android:layout_alignEnd="@+id/detailLabel" />

    <TextView
        android:id="@+id/progress_label"
        android:text=""
        android:layout_height="20dp"
        android:layout_width="220dp"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@+id/progress_bar"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:editable="false"
        android:typeface="normal"
        android:textColor="@color/text_color_cyan"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        />

    <Button
        android:id="@+id/update_button"
        android:layout_height="30dp"
        android:layout_width="70dp"
        android:text="@string/GUNCELLE"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@id/progress_label"
        android:padding="0dp"
        android:layout_margin="2dp"
        android:typeface="normal"
        android:textSize="14sp"
        android:maxLines="1"
        android:background="@drawable/ak_button"
        android:textColor="@drawable/ak_button"
        />

    <Button
        android:id="@+id/cancel_button"
        android:layout_height="30dp"
        android:layout_width="70dp"
        android:text="@string/IPTAL"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@id/update_button"
        android:padding="0dp"
        android:layout_margin="2dp"
        android:typeface="normal"
        android:textSize="14sp"
        android:maxLines="1"
        android:background="@drawable/ak_button"
        android:textColor="@drawable/ak_button"
        />
    <Button
        android:id="@+id/view_button"
        android:layout_height="30dp"
        android:layout_width="70dp"
        android:text="@string/OKU"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@id/update_button"
        android:padding="0dp"
        android:layout_margin="2dp"
        android:typeface="normal"
        android:textSize="14sp"
        android:maxLines="1"
        android:background="@drawable/ak_button"
        android:textColor="@drawable/ak_button"
        />
    <Button
        android:id="@+id/download_button"
        android:layout_height="30dp"
        android:layout_width="70dp"
        android:text="@string/INDIR"
        android:layout_toRightOf="@+id/coverImage"
        android:layout_below="@id/update_button"
        android:padding="0dp"
        android:layout_margin="2dp"
        android:typeface="normal"
        android:textSize="14sp"
        android:maxLines="1"
        android:background="@drawable/ak_button"
        android:textColor="@drawable/ak_button"
        />

    <Button
        android:id="@+id/delete_button"
        android:layout_height="30dp"
        android:layout_width="70dp"
        android:text="@string/SIL"
        android:layout_toRightOf="@+id/download_button"
        android:layout_below="@id/update_button"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:layout_margin="2dp"
        android:typeface="normal"
        android:textSize="14sp"
        android:maxLines="1"
        android:background="@drawable/ak_button"
        android:textColor="@drawable/ak_button"
        android:layout_alignParentStart="false" />


</RelativeLayout>