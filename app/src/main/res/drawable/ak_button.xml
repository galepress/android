<selector
    xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_pressed="true"  android:textColor="@color/button_pressed" android:color="@color/button_pressed" >
        <shape>
            <stroke
                android:width="1.4dp"
                android:color="@color/button_pressed"/>
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>

    <item android:state_enabled="false" android:color="@color/button_pressed">
        <shape>
            <stroke
                android:width="1.4dp"
                android:color="@color/button_pressed" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:color="@color/text_color_cyan">
        <shape>
            <stroke
                android:width="1.4dp"
                android:color="@color/text_color_cyan" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


